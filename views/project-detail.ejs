<%- include('partials/head') %>
<%- include('partials/navbar') %>

<main>
  <section class="project-detail" data-aos="fade-up">
    <div class="container">
      <img class="banner" src="<%= project.image %>" alt="<%= project.title %>" />
      <h1><%= project.title %></h1>
      <p class="desc"><%= project.fullDescription %></p>
      <h3>Features</h3>
      <ul class="features">
        <% project.features.forEach(function(f){ %>
          <li>â€¢ <%= f %></li>
        <% }) %>
      </ul>
      <h3>Tech Stack</h3>
      <div class="tech">
        <% project.tech.forEach(function(t){ %>
          <span class="chip"><%= t %></span>
        <% }) %>
      </div>
      <div class="actions">
        <a href="<%= project.github %>" target="_blank" class="btn btn-outline">GitHub</a>
        <a href="<%= project.live %>" target="_blank" class="btn btn-primary">Live Demo</a>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>